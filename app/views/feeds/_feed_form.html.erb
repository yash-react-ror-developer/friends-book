<div class="col-md-6">
  <%= form_with model: [current_user, feed], local: true do |f|%>
    <div class="form-group">
      <%= f.label :title%>
      <%= f.text_field :title, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :description%>
      <%= f.text_area :description, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :permission%>
      <%= f.select :permission, options_for_select(["public","friends","only me"]),{}, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.submit :create, class: "btn btn-primary" %>
    </div>
  <%end%>
</div>